<h1>My Cheeses</h1>

<p>
    <a asp-controller="Cheese" asp-action="Add">Add Cheese</a>
</p>

@if (ViewBag.cheeses.Count == 0){
    <p>No cheeses yet</p>
}

<ul>
    @foreach(KeyValuePair<string, string> entry in ViewBag.cheeses)
    {
    <li>@entry.Key: @entry.Value</li>
    }

</ul>